<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <!-- Smartemail Widget -->
    <metal:view_macro define-macro="view"
                      tal:define="email accessor;
                                  mask nocall:widget/EmailMask;
                                  field_id field/getName;
                                  link python:widget.linkToMailForm(field=field_id,instance=here)">
    <div tal:condition="isAnon">     
      <a href="#"
         tal:attributes="href link"
         tal:content="python: mask(here,email)">
       masked value
      </a>
     </div>
    <div tal:condition="not:isAnon">     
      <a href="#"
         tal:attributes="href string:mailto:$email"
         tal:content="email">
        email address
      </a>
     </div>


    </metal:view_macro>
  </body>

</html>